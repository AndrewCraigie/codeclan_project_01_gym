<h2>All Rooms</h2>
<%= erb('rooms/rooms_nav'.to_sym)  %>

<table class='item-table'>
<thead>
  <tr class="item-table-sort-row">
    <th><a href="/rooms/sort/asc/id" class="item-table-sort">&uarr;</><a href="/rooms/sort/desc/id" class="item-table-sort">&darr;</></th>
    <th><a href="/rooms/sort/asc/name" class="item-table-sort">&uarr;</><a href="/rooms/sort/desc/name" class="item-table-sort">&darr;</></th>
  </tr>
<tr class="item-table-labels">
  <th>ID</th>
  <th>Name</th>
</tr>
</thead>
<tbody>
<% @rooms.each do |room| %>
<tr>
  <td class="item-id"><a href="/rooms/<%= room.id %>/edit"><%= room.id %></a></td>
  <td class="item-name"><%= room.name %></td>
</tr>
<% end %>
</tbody>
</table>
<p class="table-instructions">Click ID number to edit or delete<p>
